<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"
                android:layout_toStartOf="@+id/ll_search"
                android:src="@mipmap/ic_back" />


            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_city_shape_rec"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:src="@mipmap/icon_search_black" />

                <EditText
                    android:id="@+id/tv_search"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="请输入搜索城市"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/dark"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/city_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <com.iasii.app.citylist.view.LetterListView
            android:id="@+id/letter_container"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>

