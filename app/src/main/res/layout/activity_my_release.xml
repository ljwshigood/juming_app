<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authentication_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.flyco.tablayout.SlidingTabLayout
                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:id="@+id/slidingTab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center|bottom"
                tl:tl_indicator_width_equal_title="true"
                tl:tl_tab_padding="12dp"
                tl:tl_tab_space_equal="false"
                tl:tl_textSelectSize="22sp"
                tl:tl_textsize="15sp"
                tl:tl_textSelectBold="false"
                tl:tl_textBold="false"
                tl:tl_textSelectColor="@android:color/black"
                tl:tl_textUnselectColor="@color/themeGray">

            </com.flyco.tablayout.SlidingTabLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zzteck.zzview.WJViewPaper
                android:id="@+id/wj_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.zzteck.zzview.WJViewPaper>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>